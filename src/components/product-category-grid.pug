    {category : 'Kashmiri Saffron', price : '$229', img : 'kashmiri-saffron.png', rating : 5, tag: 'Breathtaking Tea Cozies'}
  ];
.product-grid
  each product in products
    .grid-item
      .product
        .product-img(href='#')
          img.slide-img(src='images/products/'+product.img)
          .overlay
            .overlay-vertical
              .overlay-content
                a(href='#' class="btn btn-white view-products") View Products <span class="fa fa-caret-right">
        .product-footer.clearfix
          .left-col
            a.category(href='#')= product.category
            span.tag= product.tag
          .right-col
            span.price= 'From '+product.price
          
        if product.sale
          .for-sale: span Sale 20% OFF
